{
  "manifest_version": 3,
  "name": "飞牛自定义工具",
  "description": "通过浏览器插件向 FnOS WebUI 注入 CSS/JS，提供更多 UI 可自定义选项。",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "tabs",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "飞牛自定义工具",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "basic_mod.css",
        "lockscreen_mod.css",
        "desktop_icon_mod.css",
        "windows_titlebar_mod.css",
        "mac_titlebar_mod.css",
        "classic_launchpad_mod.css",
        "spotlight_launchpad_mod.css",
        "mod.js",
        "prefect_icon/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
