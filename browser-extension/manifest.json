{
  "manifest_version": 3,
  "name": "FnOS UI Mods Injector",
  "description": "按站点注入 FnOS UI Mods 的 CSS/JS，适配内网 IP 不固定的场景。",
  "version": "1.0.1",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "FnOS UI Mods",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "basic_mod.css",
        "windows_titlebar_mod.css",
        "mac_titlebar_mod.css",
        "mod.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
